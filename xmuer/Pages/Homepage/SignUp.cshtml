@page
@model xmuer.Pages.Homepage.SignUpModel
@{
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card border-primary mb-3" style="margin-top:30px">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="/Homepage/SignIn">登录</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" href="/Homepage/SignUp">注册</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group row">
                            <label for="userName" class="col-sm-3 col-form-label">用户名</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="userName" placeholder="name" asp-for="userName">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="userPass" class="col-sm-3 col-form-label">用户密码</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="userPass" placeholder="password" asp-for="userPass">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-primary">注册</button>
                        <a href="/Homepage/SignIn" class="btn" role="button" aria-disabled="true">取消</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
